/* 头像 */
.iconContainer{
    display: flex;
    justify-content:center;
    margin-top: 20px;
    margin-bottom: 8px;
}
.icon {
    width:128rpx;
    height:128rpx;
    border-radius:50%;
}
/*名字*/
.userName {
    text-align: center;
}
/*性别*/
.sexContainer{
    display: flex;
    justify-content:center;
    margin-top: 10px;
    margin-bottom: 10px;
}
.sexPic {
    width:50rpx;
    height:50rpx;
    margin-left: 5px;
}

.briefIntroContainer {
    margin: 10px 10px 10px 10px;
    padding: 5px 5px 5px 5px;
    border-color: gray;
    border-style: solid;
    border-width: 1px;
}
.briefIntro{
    width: 100%;
    height: 100%;
    border-style: solid;
}