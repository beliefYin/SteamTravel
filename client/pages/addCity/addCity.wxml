<!--addCity.wxml-->
<text >--------------添加城市---------------</text>
<view>
    <text>城市名：</text>
    <input bindinput="InputCityName">
    </input>
    <text>城市id（邮编）：</text>
    <input bindinput="InputCityId">
    </input>
    <text>介绍：</text>
    <input bindinput="InputCityIntro">
    </input>
    <text>推荐页简介：</text>
    <input bindinput="InputCityBriefIntro">
    </input>
    <view class="container">
        <view class="uploader">
            <view class="uploader-text" bindtap="doUpload">
                <text>上传图片</text>
            </view>
        </view>
    </view> 
    <button type="primary" bindtap="Affirm">确定</button>
</view>



